{
    "name": "githd",
    "displayName": "Git History Diff",
    "description": "View the git log. View the change details of a specified commit",
    "version": "0.2.2",
    "publisher": "huizhou",
    "author": {
        "name": "Hui Zhou",
        "email": "zhou_hui@outlook.com"
    },
    "engines": {
        "vscode": "^1.14.0"
    },
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/huizhougit/githd.git"
    },
    "icon": "resources/icons/icon.png",
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./out/src/extension",
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "Git History Diff configuration",
            "properties": {
                "githd.useExploreView": {
                    "type": "boolean",
                    "default": true,
                    "description": "List committed files in the Explore view instead of the SourceControl view."
                },
                "githd.exploreView.useTreeView": {
                    "type": "boolean",
                    "default": false,
                    "description": "List committed files with the folders."
                },
                "githd.logView.commitsCount": {
                    "type": "number",
                    "default": 200,
                    "description": "The commits count listed in history view. You can load more with clicking ... or load entire log with command.",
                    "enum": [
                        50, 100, 200, 300, 400, 500
                    ]
                }
            }
        },
        "views": {
            "explorer": [
                {
                    "id": "committedFiles",
                    "name": "GitHD: Committed Files",
                    "when": "config.githd.useExploreView"
                }
            ]
        },
        "commands": [
            {
                "command": "githd.updateSha",
                "title": "Check",
                "category": "GitHD",
                "icon": {
                    "light": "resources/icons/light/check.svg",
                    "dark": "resources/icons/dark/check.svg"
                }
            },
            {
                "command": "githd.clear",
                "title": "Clear",
                "category": "GitHD",
                "icon": {
                    "light": "resources/icons/light/clear.svg",
                    "dark": "resources/icons/dark/clear.svg"
                }
            },
            {
                "command": "githd.switch",
                "title": "Switch",
                "category": "GitHD",
                "icon": {
                    "light": "resources/icons/light/three-bars.svg",
                    "dark": "resources/icons/dark/three-bars.svg"
                }
            },
            {
                "command": "githd.viewHistory",
                "title": "View Log",
                "category": "GitHD"
            },
            {
                "command": "githd.viewAllHistory",
                "title": "View Entire Log (it may take a long time if the history is long)",
                "category": "GitHD"
            },
            {
                "command": "githd.selectBranch",
                "title": "Select Branch",
                "category": "GitHD"
            },
            {
                "command": "githd.inputRef",
                "title": "Input Ref",
                "category": "GitHD"
            },
            {
                "command": "githd.openCommittedFile",
                "title": "Open the change of the committed file",
                "category": "GitHD"
            }
        ],
        "menus": {
            "commandPalette": [
                {
                    "command": "githd.clear",
                    "when": "false"
                },
                {
                    "command": "githd.switch",
                    "when": "false"
                },
                {
                    "command": "githd.updateSha",
                    "when": "false"
                },
                {
                    "command": "githd.openCommittedFile",
                    "when": "false"
                }
            ],
            "scm/title": [
                {
                    "command": "githd.updateSha",
                    "group": "navigation",
                    "when": "scmProvider == githd"
                },
                {
                    "command": "githd.switch",
                    "group": "navigation",
                    "when": "!config.githd.useExploreView"
                }
            ],
            "scm/resourceGroup/context": [
                {
                    "command": "githd.clear",
                    "when": "scmProvider == githd",
                    "group": "inline"
                }
            ],
            "view/title": [
                {
                    "command": "githd.clear",
                    "when": "view == committedFiles",
                    "group": "navigation"
                }
            ]
        }
    },
    "devDependencies": {
        "@types/mocha": "^2.2.32",
        "@types/node": "^6.0.40",
        "mocha": "^2.3.3",
        "typescript": "^2.0.3",
        "vscode": "^1.0.0"
    }
}